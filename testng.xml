<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="TutorialsNinja Test Suite" verbose="1">
    <listeners>
        <listener class-name="com.selcuk.TutorialsNinja.listeners.TestListener"/>
    </listeners>

    <test name="Login Tests Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.selcuk.TutorialsNinja.tests.LoginTest"/>
        </classes>
    </test>

